datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL") // Database connection string in environment variables
}


generator client {
  provider             = "prisma-client-py"
  interface            = "asyncio"
  recursive_type_depth = 5
}


model user {
  id    Int     @id @default(autoincrement())
  email String  @unique
  firstName  String
  lastName String
  artists String[]
  genres String[]
  city String
  state String
}


model review{
  id    Int     @id @default(autoincrement())
  artist String 
  review String
  firstName String
  lastName String
  rating Int
}